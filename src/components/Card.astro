---
const { matchVisitor, matchHome, date, network } = Astro.props;
---

<div class="max-w-sm rounded-2xl overflow-hidden border border-yellow-600 m-8 bg-yellow-50">
  <div class="px-6 py-4">
    <p class="font-bold text-xl mb-2">{matchVisitor}<br>{matchHome}</p>
    <p class="text-yellow-800 text-base">
      {date}
    </p>
    <div>
      <p set:html={network}></p>
    </div>
  </div>
  
</div>
